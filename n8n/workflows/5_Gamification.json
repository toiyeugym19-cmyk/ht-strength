            "position": [
                650,
                300
            ]
        },
        {
            "parameters": {
                "operation": "executeQuery",
                "query": "UPDATE users SET badges = array_append(badges, 'week_warrior') WHERE user_id = $1"
            },
            "name": "AwardBadge",
            "type": "n8n-nodes-base.postgres",
            "typeVersion": 1,
            "position": [
                850,
                200
            ]
        },
        {
            "parameters": {
                "message": "ðŸ”¥ 7 DAY STREAK! You've earned the 'Week Warrior' badge!"
