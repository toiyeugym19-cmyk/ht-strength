            "type": "n8n-nodes-base.telegram",
            "typeVersion": 1,
            "position": [
                1050,
                200
            ]
        }
    ],
    "connections": {
        "DailyCheck": {
            "main": [
                [
                    {
                        "node": "GetStreaks",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "GetStreaks": {
            "main": [
                [
                    {
                        "node": "CheckMilestone",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "CheckMilestone": {
            "main": [
                [
                    {
                        "node": "AwardBadge",
                        "type": "main",
                        "index": 0
                    }
                ],
                []
            ]
        },
        "AwardBadge": {
            "main": [
                [
                    {
                        "node": "NotifyBadge",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    }
